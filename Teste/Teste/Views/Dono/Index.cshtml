@model IEnumerable<Teste.Models.Dono>

@{
    ViewData["Title"] = "Index";
}

<h1>Listagem de donos</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DonoId" class="btn btn-default">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.DonoId" class="btn btn-default" data-target="@item.DonoId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.DonoId" class="btn btn-default">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

