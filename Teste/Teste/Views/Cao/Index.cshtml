@model IEnumerable<Teste.Models.Cao>

@{
    ViewData["Title"] = "Listagem";
}

<h1>Cães cadastrados</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dono.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CachorroId" class="btn btn-default">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CachorroId" class="btn btn-default">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.CachorroId" class="btn btn-default">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
