@model IEnumerable<Blog.Models.Comentario>

@{
    ViewData["Title"] = "Index";
}

<h1>Listagem</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataComentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MensagemId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataComentario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MensagemId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ComentarioId" class="btn btn-default">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ComentarioId" class="btn btn-default">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ComentarioId" class="btn btn-default">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
